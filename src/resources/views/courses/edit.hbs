<div class="mt-4">
    <h3>Cập nhật khoá học</h3>

    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="mb-3">
            <label for="name" class="form-label">Tên khoá học</label>
            <input type="text" class="form-control" id="name" value="{{course.name}}" name="name">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Mô tả</label>
            <textarea class="form-control" id="description" name="description">{{course.description}}</textarea>
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">Video id</label>
            <input type="text" class="form-control" id="videoId" value="{{course.videoId}}" name="videoId">
        </div>
        <div class="mb-3">
            <label for="level" class="form-label">Mức độ</label>
            <input type="text" class="form-control" id="level" value="{{course.level}}" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>

</div>